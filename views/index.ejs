<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="styles/bootstrap.min.css">
    <link rel="stylesheet" href="styles/main.css">
    <script>
        window.onload = function () {

            signup.addEventListener("click", function () {
               window.location = "/signup";
            });
        };
    </script>

</head>
<body>
    <h1>Login page</h1>
    <form action="/profile" method="post">

        <div class="form-group">
            <label for="inputlogin">Enter login</label>
            <input class="form-control" type="text" id="inputlogin" name="login">
        </div>

        <div class="form-group">
            <label for="inputpassword">Enter password</label>
            <input class="form-control" type="password" id="inputpassword" name="password">
        </div>
        <input type="submit" class="btn btn-success" value="Sign in">
        <input id="signup" class="btn btn-dark" type="button" value="Sign up">
    </form>



</body>
</html>